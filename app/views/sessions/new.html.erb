<%= render 'shared/content_title', title: 'Welcome back!' %>

<div class="row well">
  <div class="control-group">
    <%= form_tag 'login' do %>
      <%= label_tag 'username' %>
      <%= text_field_tag :username %>
      <br/>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br/>
      <%= submit_tag "Login" %>
    <% end %>
  </div>
</div>

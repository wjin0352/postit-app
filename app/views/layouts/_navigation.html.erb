<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <li>
    <%= link_to 'link', '' %>
  </li>
</ul>

<div class='btn-group nav-item'>
  <%= link_to "", class: "btn btn-small dropdown-toggle", 'data-toggle' => 'dropdown' do %>
    Categories <span class="caret"></span>
  <% end %>
  <ul class='dropdown-menu'>
    <% Category.all.each do |category| %>
      <li>
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end %>
    <li class='divider'></li>
    <li><%= link_to(new_category_path) do %>
      <i class="icon-plus"></i>
      New Category
    <% end %>
    </li>
  </ul>
</div>
<div class="nav-item">
  <% if logged_in? %>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-primary btn-small' %>
    <%= link_to 'Log out', logout_path, class: 'btn btn-warning btn-small' %>
    Welcome <%= current_user.username %>
  <% else %>
    <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
    <%= link_to 'Login', login_path, class: 'btn btn-success btn-small' %>
  <% end %>
</div>

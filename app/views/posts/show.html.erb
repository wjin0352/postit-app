<p class='pull-right'>
  <% if logged_in? %>
  [<%= link_to 'edit this post', edit_post_path(@post) %>]
  <% end %>
</p>
<p>
  <%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: @post.title %>

<p><%= @post.description %></p>
  <hr/>

<%= form_for [@post, @comment] do |f| %>
<%= render 'shared/error', obj: @comment, text: "fix these errors: " %>
  <div class="control-group">
    <%= f.label "leave a comment:" %>
    <%= f.text_area :body, rows: 3, class: "span4" %>
  </div>
    <%= f.submit "Create Comment", class: "btn btn-primary" %>
<% end %>
<br/>

<h5>Comments: </h5>

<% @post.comments.each do |comment| %>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <br/>
    <span class="quiet">by</span> <%= comment.creator.username %>
    <small>at fix_time(comment.created_at)</small>
    <hr/>
  </div>
<% end %>
<br/>

<div class="span4">
  <h5>
    <%= link_to "back to all posts", posts_path, class: "btn btn-primary btn-small" %>
  </h5>
</div>

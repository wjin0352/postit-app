<%= render 'shared/content_title', title: "All Posts"%>
<% if logged_in? %>
<%= link_to 'create post', new_post_path, class: 'btn btn-primary row'%>
<hr/>
<% end %>


<% @posts.each do |post| %>
  <%= render 'post', post: post %>
<% end %>
<br/>

<% @total_pages.times do |page| %>
  <% if (params[:offset].nil? && n==0 ) || params[:offset].to_s == (page*Post::PER_PAGE).to_s %>
    <%= "| page#{page+1}" %>
  <% else %>
    <%= link_to "| page #{page+1} ", posts_path(offset: (page) *Post::PER_PAGE) %>
  <% end %>
<% end %>

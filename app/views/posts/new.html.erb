<% if @post.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8'
      <h4>Sorry, there were some errors: </h4>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>

<%= render 'shared/content_title', title: "Create a new post!" %>

<div class='row well'>
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
      <br/>
      <%= f.label :url %>
      <%= f.text_field :url %>
      <br/>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
      <br/>
      <%= f.submit "Create Post", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<% if @post.errors.any? %>
  <div class='row'>
  <div class='alert alert-error span8'>
  <h4>Fix these errors first: </h4>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  </div>
<% end %>

<div class='row well'>
  <%= form_for @post do |p| %>
    <%= p.label :title %>
    <%= p.text_field :title %>
    <br/>
    <%= p.label :url %>
    <%= p.text_field :url %>
    <br/>
    <%= p.label :description %>
    <%= p.text_area :description %>
    <br/>
    <%= p.submit "Edit Post", class: 'btn btn-primary' %>
  <% end %>
</div>
